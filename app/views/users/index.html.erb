<div id="user_list">
    <h2>Users Management</h2>
    <% if (checkAction('new'))%>
    <%= link_to "+ Add new User", "users/new"%>
    <%end%>
    <table class="list" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <td width="5%">Id</td>
                <td>Username</td>
                <td>Email</td>
                <td>Name</td>
                <td width="15%">Created Date</td>
                <td width="15%">Last Visit Date</td>
                <td>Privilege</td>
                <td>Status</td>
                <td width="12%">Actions</td>
            </tr>
        </thead>
        <tbody>
        	
			<% @user.each do |row|%>
			<%
				if row.status == 1 
					@status = "Active"
				else
					@status = "Inactive"
				end
				if row.privilege == 1 
					@privilege = 'APG'
				elsif row.privilege == 50 
					@privilege = 'SWAT Leader'
				elsif row.privilege == 100 
					@privilege = 'SWAT Team'
				end
			%>
            <tr>
                <td><%= row.id %></td>
                <td><%= row.username %></td>
                <td><%= row.email%></td>
                <td><%= row.name%></td>
                <td><%= row.createdDate%></td>
                <td><%= row.lastVisitDate%></td>
                <td><%= @privilege %></td>
                <td><%= @status%></td>
                <td>
                   <% if (checkAction('edit'))%>
                    <%= link_to "Edit", edit_user_path(row.id)%>
                    <% end %>
                  <% if (checkAction('delete'))%>
	                  <% @currentUser = session[:curentUser]
	                  if @currentUser.id != row.id %>
	                   <%= link_to 'Delete', user_path(row,"destroy"),:method=> :delete, :confirm => "Are you sure?" %>
	                   <% end %>
                   <% end %>
                </td>
            </tr>
            <% end %>
            
        </tbody>
    </table>
    <%= paginate @user %>
</div>